{
  "name": "ninthdesertdude-web-story",
  "description": "online interactive fiction writer and player",
  "homepage": "https://ninthdesertdude.github.io/web-story/",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.11",
    "@types/react-router-dom": "^5.1.6",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1"
  },
  "dependencies": {
    "@fluentui/react": "^8.14.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint \"./src/**/*.+(js|ts|tsx)\""
    ],
    "*.+(js|ts|tsx|css)": [
      "prettier --check \"src/**/*.+(js|ts|tsx|css)\""
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint-code": "eslint \"./src/**/*.+(js|ts|tsx)$\"",
    "lint-prettier": "prettier --check \"src/**/*.+(js|ts|tsx|css)\"",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
